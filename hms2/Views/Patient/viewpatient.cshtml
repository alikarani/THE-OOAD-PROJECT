@model List<hms2.Models.AddpatientModel>
@{
    ViewBag.Title = "viewpatient";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>pID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Disease</th>
                        <th>Cellnum</th>
                        <th>CNIC</th>
                        <th>Gender</th>
                        <th>Nationality</th>


                    </tr>
                </thead>

                <tbody>

                    @foreach (var item in Model)
            {
                        <tr>
                            <td>@item.pID</td>
                            <td>@item.firstName </td>
                            <td>@item.lastName  </td>
                            <td> @item.Disease </td>
                            <td>  @item.cellnum</td>
                            <td> @item.cnic </td>
                            <td> @item.gender </td>
                            <td> @item.nationality </td>
                            <td>@Html.ActionLink("update", "updatepatient", new { pID = @item.pID }, new { @class = "btn btn-primary" })</td>
                            <td>@Html.ActionLink("Delete", "Deletepatient", new { pID = @item.pID }, new { @class = "btn btn-primary" })</td>


                        </tr>
                    }


                </tbody>
            </table>
        </div>




